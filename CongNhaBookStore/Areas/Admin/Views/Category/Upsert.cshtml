@model CongNhaBooks.Models.Category;
@{
    ViewData["Title"] = "Category Upsert";
    var title = "Create Category";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly"></div>
        @if(Model.Id != null)
        {
            title = "Edit Category"; //edit
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">TITLE</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                   @if(Model.Id != 0)
                    {
                           <partial name="_EditAndBackToListButton.cshtml" model="Model.Id"/>
                    }
                   else
                    {
                        <partial name="_CreateAndBackToListButton.cshtml" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>